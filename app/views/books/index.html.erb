<p id="notice"></p>
<h1>Books</h1>
<table>
  <% @books.each do |book| %>

    <thead>
      <tr>
        <tr>Title</tr>
        <tr>Body</tr>
        <tr colspan="3"></tr>
      </tr>
    </thead>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @blog.errors.count %>error
  <% @book.errors.full_message.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  Title
  <%= f.text_field :title %>
  Body
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>



</form>