<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @blog.errors.count %>error
  <% @book.errors.full_message.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>